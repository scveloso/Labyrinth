<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.sveloso.labyrinth">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.TitleScreenActivity"
                    android:screenOrientation="landscape"
                    android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".controller.CombatActivity"
                  android:screenOrientation="landscape"
                  android:configChanges="orientation">
        </activity>
        <activity android:name=".controller.GameEndActivity"
                  android:screenOrientation="landscape"
                  android:configChanges="orientation">
        </activity>
        <activity android:name=".controller.LabyrinthActivity"
                  android:screenOrientation="landscape"
                  android:configChanges="orientation">
        </activity>
        <activity android:name=".controller.CreatePlayerActivity"
                  android:screenOrientation="landscape"
                  android:configChanges="orientation" >
        </activity>
        <activity android:name=".controller.PlayerListActivity"
                  android:screenOrientation="landscape"
                  android:parentActivityName=".controller.TitleScreenActivity"
                  android:configChanges="orientation">
        </activity>
    </application>
</manifest>